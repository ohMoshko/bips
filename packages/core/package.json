{
  "name": "@bips/core",
  "version": "0.0.1",
  "description": "Core types and utilities for Bips Protocol",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    }
  },
  "files": ["dist"],
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "test": "vitest run",
    "test:watch": "vitest",
    "typecheck": "tsc --noEmit",
    "clean": "rm -rf dist"
  },
  "devDependencies": {
    "vitest": "^2.1.0"
  },
  "peerDependencies": {},
  "publishConfig": {
    "access": "public"
  }
}
